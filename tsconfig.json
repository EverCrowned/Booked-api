{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "lib": ["ESNext"],
        "moduleResolution": "node",
        "alwaysStrict": true,
        "downlevelIteration": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "strictPropertyInitialization": true,
        "importHelpers": true,
        "sourceMap": true,
        "jsx": "preserve",
        "noImplicitAny": false
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "db/**/*"]
}
